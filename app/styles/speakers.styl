#event-speakers
  /*background url('../images/bg-event.jpg') no-repeat
  background-size cover*/
  background #f3f3f3

.event-speakers-title
  color #333
  base_title()


.event-speakers-content
  base_content()

.speaker-list
  cf()
  margin-top 50px
  padding 0

.speaker-item
  col(1/4, cycle: 4)

  list-style none
  margin-bottom 5%
  position relative

  .speaker-card
    cf()

    .speaker-card-cover
      float none
      position absolute
      top 0
      left 0
      z-index 990
      width 100%
      height inherit
      transform rotateX(0deg) rotateY(0deg)
      transform-style preserve-3d
      backface-visibility hidden
      transition all .4s ease-in-out
      padding inherit

      &.card-hover
        z-index 900
        transform rotateY(180deg)

    .speaker-card-content
      float none
      top 0
      left 0
      z-index 800
      width 100%
      transform rotateY(-179deg)
      transform-style preserve-3d
      backface-visibility hidden
      transition all .4s ease-in-out
      padding inherit
      &.card-hover
        z-index 1000
        transform rotateX(0deg) rotateY(0deg)

  .speaker-photo
    width 100%
    max-width 100%
    height auto

  .speaker-name
    font-size .9em

  .speaker-link
    font-size .7em

  .speaker-description
    font-size .7em
    text-align justify
