#event-speakers
  /*background url('../images/bg-event.jpg') no-repeat
  background-size cover*/
  background #f3f3f3

.event-speakers-title
  color #333
  base_title()


.event-speakers-content
  base_content()

.speaker-list
  cf()
  margin-top 50px
  padding 0

.speaker-item
  +above(769px)
    col(1/4, cycle: 4)
  +between(641px, 768px)
    col(1/3, cycle: 3)
  +between(421px, 640px)
    col(1/2, cycle: 2)
  +below(420px)
    col(1/1, cycle: 1)

  list-style none
  text-align center !important
  margin-bottom 3%

  .speaker-name
    font-size 1em
    text-transform uppercase
    color primary_color
    margin-bottom 0

  .speaker-link
    font-size .7em
    text-decoration none
    color black

  .speaker-photo
    vertical-align middle
    max-width 100%
    height auto
    border-radius 50%
    border 7px solid #fff
